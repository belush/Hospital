@model Hospital.DAL.Entity.Appointment

@{
    ViewBag.Title = "CreateApp";
}

@{
    Hospital.DAL.Illness ill = ViewBag.ill;
    ViewBag.illId = ill.IllnessId;
}

<h2>CreateApp</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Appointment</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AppointmentType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AppointmentType)
            @Html.ValidationMessageFor(model => model.AppointmentType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AppointmentName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AppointmentName)
            @Html.ValidationMessageFor(model => model.AppointmentName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsAppointmentDone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsAppointmentDone)
            @Html.ValidationMessageFor(model => model.IsAppointmentDone)
        </div>
        

        <div class="editor-field">
            @Html.Hidden(ill.IllnessId)
            @Html.ValidationMessageFor(model => model.IsAppointmentDone)
        </div>
        @*ViewBag.illnessId*@
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
